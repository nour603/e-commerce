
pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                echo "Checkout du code depuis GitHub"
                git branch: 'main', url: 'https://github.com/nour603/e-commerce.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('SAST - SonarQube') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh 'mvn sonar:sonar'
                }
            }
        }

        stage("Quality Gate") {
            steps {
                script {
                    timeout(time: 5, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: true
                    }
                }
            }
        }

        stage('DAST - OWASP ZAP') {
            steps {
                sh '/opt/zap/zap.sh -cmd -quickurl http://VM_PROD_IP:8080 -quickout zap_report.html'
            }
        }

        stage('Deploy to Prod') {
            steps {
                sh 'scp target/*.war user@VM_PROD:/var/lib/tomcat9/webapps/'
            }
        }
    }

    post {
        failure {
            echo "Pipeline échoué, vérifier les logs."
        }
    }
}
